{% extends 'base.html.twig' %}

{% block title %}
    Convert to creator account
{% endblock %}
{% block title_header %}
    Convert to creator account
{% endblock %}
{% block body %}
    <div class="bg-white">
        <div class="px-6 py-24 sm:px-6 sm:py-32 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">To start creating polls you'll need to convert your account to a creator account.</h2>
                <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600">This will download (and subscribe to updates to) a list of your Patreon members in order to check if they can vote on the polls.</p>
                <div class="mt-10 flex items-center justify-center gap-x-6">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
